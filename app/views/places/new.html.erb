<h1>New Place</h1>
<% unless @place.errors.empty? %>
  <div class="panel">
    <h5><%= @place.errors.size %> errors prevented us from saving the place</h5>
    <ul>
    <% @place.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @place do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :latitude %>
    <%= f.text_field :latitude %>
  </div>
  <div>
    <%= f.label :longitude %>
    <%= f.text_field :longitude %>
  </div>
  <div><%= f.submit 'Create Place', class: 'button radius small' %></div>
<% end %>
<%= link_to 'Back to Home', root_path %>
