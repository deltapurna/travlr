<h1>Sign Up</h1>
<% unless @user.errors.empty? %>
  <div class="panel">
    <h5><%= @user.errors.size %> errors prevented us from saving the place</h5>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @user do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div><%= f.submit 'Create Place', class: 'button radius small' %></div>
<% end %>
<%= link_to 'Back to Home', root_path %>
